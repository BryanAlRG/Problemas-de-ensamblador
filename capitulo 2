.data
prompt: .asciz "Ingrese un número entero: "
format_input: .asciz "%d"
result_yes: .asciz "El número %d es múltiplo de 6.\n"
result_no: .asciz "El número %d no es múltiplo de 6.\n"

.text
.global main

main:
    push {ip, lr}

    @ Mostrar prompt
    ldr r0, =prompt
    bl printf

    @ Leer el número
    sub sp, sp, #4
    ldr r0, =format_input
    mov r1, sp
    bl scanf
    ldr r4, [sp]
    add sp, sp, #4

    @ Comprobar si es divisible por 2
    and r0, r4, #1
    cmp r0, #0
    bne not_multiple

    @ Comprobar si es divisible por 3
    mov r0, r4
    mov r1, #3
    bl __aeabi_idivmod
    cmp r1, #0
    bne not_multiple

    @ Es múltiplo de 6
    ldr r0, =result_yes
    mov r1, r4
    bl printf
    b end

not_multiple:
    @ No es múltiplo de 6
    ldr r0, =result_no
    mov r1, r4
    bl printf

end:
    mov r0, #0
    pop {ip, pc}
